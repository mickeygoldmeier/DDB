<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00F5F5F5"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="10pt"
    android:rotationY="180"
    tools:context=".UI.AddParcelProcces.AddParcelFragment3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/parcel_data"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/enter_the_parcel_data"
        android:textSize="25sp" />

    <AutoCompleteTextView
        android:id="@+id/cities_actv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="עיר"
        android:background="@drawable/edit_text_style_light"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:gravity="start"
        android:layout_margin="7dp"
        android:completionThreshold="1" />

    <EditText
        android:id="@+id/street_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:hint="רחוב"
        android:background="@drawable/edit_text_style_light"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:gravity="start"
        android:layout_margin="7dp"/>

    <EditText
        android:id="@+id/home_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="מספר בית"
        android:background="@drawable/edit_text_style_light"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:gravity="start"
        android:layout_margin="7dp"/>



</LinearLayout>