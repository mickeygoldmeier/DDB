<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".UI.NoInternetConnection">

    <ImageView
        android:id="@+id/gif_no_internet_iv"
        android:layout_width="120pt"
        android:layout_height="120pt"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:srcCompat="@drawable/no_connection" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/no_internet_connection"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/try_agian_later"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/no_internet_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_style_regular"
        android:padding="15dp"
        android:text="@android:string/ok"
        android:textColor="#ffffff" />

</LinearLayout>